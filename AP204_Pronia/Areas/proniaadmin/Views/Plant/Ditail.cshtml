@model Plant
@{
    ViewData["Title"] = "Ditail";
}

<table class="table table-dark" style="height:150px;">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Image
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Color
            </th>
            <th>
                Guarantee
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Id
            </td>
            <td>
                <img src="~/assets/images/website-images/@Model.PlantImages" alt="Inner Image" style="width:100px;height:90px" />

            </td>
            <td>
                @Model.Name
            </td>
            <td>
                @Model.Price
            </td>
            <td>
                @Model.Color
            </td>
            <td>
                @Model.Guarantee
            </td>
        </tr>
    </tbody>
</table>

